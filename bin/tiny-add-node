#!/usr/bin/env python
from tinycloud.env import ConnectionManager
from tinycloud.node import Node



def parse_args():
    import argparse

    parser = argparse.ArgumentParser(description='TinyCloud manager module')
    parser.add_argument('--name', '-n', required=True)
    parser.add_argument('--ip', required=True)
    parser.add_argument('--port', required=True)
    parser.add_argument('--user', required=True)
    parser.add_argument('--pwd', required=True)
    parser.add_argument('--virt_type', '-vt', required=True)
    # parser.add_argument('')

    return parser.parse_args()


def main():
    args = parse_args()
    node = Node(name=args.name, ip=args.ip, port=args.port, user=args.user, pwd=args.pwd, virt_type=args.virt_type)
    c = ConnectionManager()
    c.add_new_node(node)


    output = 'Nothing to return'
    print(args)


if __name__ == '__main__':
    main()
